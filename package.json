{
    "name": "react-ts-quick-starter",
    "version": "1.0.0",
    "description": "Quick create react + typescript project development enviroment and scaffold for developing npm package components",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development webpack serve --progress --color --config ./scripts/config/webpack.dev.js",
        "build": "npm run build:pro",
        "build:dev": "cross-env NODE_ENV=development webpack --config ./scripts/config/webpack.dev.js",
        "build:pro": "cross-env NODE_ENV=production webpack --config ./scripts/config/webpack.prod.js",
        "lint": "npm run lint-eslint && npm run lint-stylelint",
        "lint-eslint": "eslint -c .eslintrc.js --ext .ts,.tsx,.js src",
        "lint-stylelint": "stylelint --config .stylelintrc.js src/**/*.{less,css,scss}",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{ts,tsx,js}": [
            "eslint --config .eslintrc.js"
        ],
        "*.{css,less,scss}": [
            "stylelint --config .stylelintrc.js"
        ],
        "*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
            "prettier --write"
        ]
    },
    "repository": {
        "url": "https://github.com/Pzx1997/react-ts-quick-starter"
    },
    "keywords": [
        "react-project",
        "typescript-project",
        "react-typescript",
        "react-ts-quick-starter"
    ],
    "author": "pxyo",
    "license": "MIT",
    "bugs": {},
    "homepage": "",
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "clean-webpack-plugin": "^4.0.0-alpha.0",
        "conventional-changelog-cli": "^2.1.1",
        "cross-env": "^7.0.3",
        "css-loader": "^5.2.6",
        "eslint": "^7.27.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-unicorn": "^32.0.1",
        "html-webpack-plugin": "^5.3.1",
        "husky": "^6.0.0",
        "less": "^4.1.1",
        "less-loader": "^9.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.0",
        "style-loader": "^2.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
        "stylelint-order": "^4.1.0",
        "typescript": "^4.3.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3"
    }
}
